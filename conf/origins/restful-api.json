{
    "id": "restful-api",
    "prefix": "/restful-api",
    "logLevel": "warn",
    "exposeErrors": true,
    "redis": {
        "socket": {
            "host": "redis",
            "port": 6379
        }
    },
    "origin": {
        "http2": false,
        "requestCoalescing": true,
        "circuitBreaker": true,
        "fetchTimeout": 2000,
        "httpxOptions": {
            "protocol": "https:",
            "hostname": "api.restful-api.dev",
            "family": 4,
            "port": 443,
            "method": "GET",
            "headers": {
                "Content-Type": "application/json"
            },
            "timeout": 2000
        },
        "agentOptions": {
            "keepAlive": true
        },
        "transformations": [
            {
                "urlPattern": ".*",
                "actions": [
                    {
                        "phase": "OriginResponse",
                        "uses": "setHeaders",
                        "with": {
                            "cache-control": "public, s-maxage=60, max-age=15"
                        }
                    },
                    {
                        "phase": "CacheRequest",
                        "uses": "setLastModifiedAndDateHeaders"
                    },
                    {
                        "phase": "CacheRequest",
                        "uses": "setETagHeader"
                    }
                ]
            }
        ]
    }
}