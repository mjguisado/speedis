{
    "id": "mocks",
    "prefix": "/mocks",
    "logLevel": "info",
    "exposeErrors": false,
    "redis": {
        "url": "redis://redis:6379"
    },
    "origin": {
        "httpxOptions": {
            "protocol": "http:",
            "host": "mocks",
            "family": 4,
            "port": 3030,
            "method": "GET",
            "headers": {},
            "timeout": 2000
        },
        "agentOptions": {
            "keepAlive": true
        },
        "fetchTimeout": 1000,
        "ignoredQueryParams": ["cc", "delay"],
        "sortQueryParams": true,
        "requestCoalescing": false,
        "lock": false,
        "lockOptions": {
            "lockTTL": 750,
            "retryCount": 3,
            "retryDelay": 500,
            "retryJitter": 250
        },
        "circuitBreaker": false,
        "circuitBreakerOptions": {
            "errorThresholdPercentage": 20,
            "resetTimeout": 15000
        },
        "transformations": [
            {
                "urlPattern": ".*",
                "actions": [
                    {
                        "phase": "OriginRequest",
                        "uses":  "setHeaders",
                        "with": {
                            "x-header": "example of transformation"
                        }         
                    }
                ]  
            } 
        ]
    }
}