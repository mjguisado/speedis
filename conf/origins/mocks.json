{
    "id": "mocks",
    "prefix": "/mocks",
    "logLevel": "warn",
    "exposeErrors": true,
    "redis": {
        "socket": {
            "host": "127.0.0.1",
            "port": 6379
        }
    },
    "origin": {
        "http2": false,
        "localRequestCoalescing": true,
        "fetchTimeout": 2000,
        "httpxOptions": {
            "protocol": "http:",
            "host": "localhost",
            "family": 4,
            "port": 3100,
            "method": "GET",
            "headers": {
                "Content-Type": "application/json"
            },
            "timeout": 2000
        },
        "agentOptions": {
            "keepAlive": true
        },
        "transformations": [
            {
                "urlPattern": ".*",
                "actions": [
                    {
                        "phase": "OriginResponse",
                        "func": "setHeaders",
                        "params": {
                            "cache-control": "public, s-maxage=60, max-age=15"
                        }
                    },
                    {
                        "phase": "CacheRequest",
                        "func": "setLastModifiedAndDateHeaders"
                    },
                    {
                        "phase": "CacheRequest",
                        "func": "setETagHeader"
                    }
                ]
            }
        ]
    }
}