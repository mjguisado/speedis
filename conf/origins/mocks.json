{
    "id": "mocks",
    "prefix": "/mocks",
    "logLevel": "info",
    "exposeErrors": false,
    "redis": {
        "url": "redis://redis:6379"
    },
    "origin": {
        "httpxOptions": {
            "protocol": "http:",
            "host": "mocks",
            "family": 4,
            "port": 3030,
            "method": "GET",
            "headers": {},
            "timeout": 2000
        },
        "agentOptions": {
            "keepAlive": true
        },
        "ignoredQueryParams": ["cc", "delay"],
        "sortQueryParams": true,
        "requestCoalescing": true,
        "lock": true,
        "lockOptions": {
            "lockTTL": 750,
            "retryCount": 3,
            "retryDelay": 500,
            "retryJitter": 250
        },
        "circuitBreaker": true,
        "circuitBreakerOptions": {
            "errorThresholdPercentage": 20,
            "resetTimeout": 15000
        },
        "actionsLibraries": {
            "json": "./actionLibraries/json.js"
        },
        "transformations": [
            {
                "urlPattern": "/mocks/users/1",
                "actions": [
                    {
                        "phase": "OriginResponse",
                        "uses":  "json:deleteJsonPaths",
                        "with": {
                            "jsonpaths": ["$[*].user.phones[*].type", "$[*].metadata"]
                        }         
                    }
                ]  
            },
            {
                "urlPattern": "/mocks/users/2",
                "actions": [
                    {
                        "phase": "OriginResponse",
                        "uses":  "json:keepJsonPaths",
                        "with": {
                            "jsonpaths": ["$[*].user.phones[*].type", "$[*].metadata"]
                        }    
                    }
                ]  
            },
            {
                "urlPattern": ".*",
                "actions": [
                    {
                        "phase": "OriginRequest",
                        "uses":  "headers:setHeaders",
                        "with": {
                            "x-header": "example of transformation"
                        }         
                    }
                ]  
            } 
        ]
    }
}